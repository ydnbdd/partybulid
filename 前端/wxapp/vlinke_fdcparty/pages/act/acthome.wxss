.userlist_box {
    padding: 0rpx 30rpx;
    height: 160rpx;
    border-bottom: 1px solid #f8f8f8;
}

.userlistbox {
    height: 160rpx;
}

.userlistbox .itembox {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0rpx;
    overflow: hidden;
}

.userlistbox .itembox .headpic {
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: 0;
    padding: 0;
    border-radius: 50%;
    border: 1rpx solid #ddd;
}

.userlistbox .itembox .info {
    width: 560rpx;
    height: 100rpx;
    line-height: 50rpx;
    font-size: 32rpx;
    overflow: hidden;
    text-align: justify;
}

.userlistbox .itembox .info .realname {
    color: #ff0000;
}

.userlistbox .itembox .info .tip {
    color: #888888;
}