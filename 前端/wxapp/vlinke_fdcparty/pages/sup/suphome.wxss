.supnav {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    width: 750rpx;
    padding: 0rpx;
    background-color: #ddd;
}

.supnav-item {
    text-align: center;
    display: block;
    width: 373rpx;
    padding: 80rpx 0rpx;
    background-color: #fff;
    margin-bottom: 2rpx;
}

.supnav-item .cicon {
    width: 100rpx;
    height: 100rpx;
}

.supnav-item .name {
    display: block;
    font-size: 28rpx;
    color: #000000;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}