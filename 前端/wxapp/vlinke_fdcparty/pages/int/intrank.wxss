.typelist {
    position: fixed;
    width: 750rpx;
    height: 100%;
    background-color: #333333;
    z-index: 0;
}

.typelist-item {
    height: 92rpx;
    line-height: 92rpx;
    padding-left: 40rpx;
    color: #cccccc;
    border-bottom: 1px solid rgba(0,0,0,.3);
}

.sitem-box {
    background-color: #1a1a1a;
    padding: 30rpx 10rpx;
    display: flex;
    justify-content: space-around;
    width: 510rpx;
}

.sitem-box .sitem {
    color: #eee;
    text-align: center;
    font-size: 34rpx;
}

.mitem-box {
    background-color: #1a1a1a;
    padding: 10rpx 10rpx;
    flex-wrap: wrap;
    display: flex;
    justify-content: space-around;
    width: 510rpx;
}

.mitem-box .mitem {
    color: #eee;
    text-align: center;
    font-size: 34rpx;
    width: 120rpx;
    line-height: 80rpx;
}

.ranktop {
    padding: 30rpx 30rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 4rpx solid #ddd;
    line-height: 64rpx;
}

.ranktop .til {
    font-weight: bold;
    width: 330rpx;
    color: #09BB07;
}

.ranktop .itype {
    width: 120rpx;
    text-align: right;
    font-size: 34rpx;
}

.rankbox {
    padding: 20rpx 30rpx;
}

.rankitem {
    display: flex;
    justify-content: flex-start;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid #ddd;
}

.ranknobox {
    align-self: center;
    width: 100rpx;
}

.rankno {
    background-color: #888888;
}

.rankno1 {
    background-color: #dd514c;
}

.rankno2 {
    background-color: #f37b1d;
}

.rankno3 {
    background-color: #e99c6a;
}

.headpic {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    border: 2rpx solid #ddd;
}

.realname {
    align-self: center;
    width: 360rpx;
}

.intsum {
    align-self: center;
    width: 130rpx;
    text-align: right;
}