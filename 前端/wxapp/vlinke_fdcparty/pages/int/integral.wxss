.integral-box {
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #ddd;
}

.integral-box-active {
    background-color: #F8F8F8;
}

.integral-box-til {
    width: 690rpx;
    font-size: 34rpx;
    line-height: 50rpx;
    text-align: justify;
}

.integral-box-desc {
    width: 690rpx;
    font-size: 28rpx;
    color: #888888;
    line-height: 50rpx;
    height: 50rpx;
}

.integral-int {
    align-self: center;
    width: 130rpx;
    text-align: right;
    font-size: 36rpx;
}

.int-badge {
    line-height: 40rpx;
    height: 40rpx;
    margin-top: 4rpx;
    margin-left: 20rpx;
    font-size: 24rpx;
    overflow: hidden;
    display: block;
    float: right;
    padding: 0rpx 20rpx;
    color: #fff;
}