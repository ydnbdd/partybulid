page {
    background-color: #f2f2f2;
    padding-bottom: 30rpx;
}

.mytop {
    width: 750rpx;
    height: 350rpx;
    position: relative;
}

.mypic {
    width: 750rpx;
    height: 310rpx;
}

.myinfo {
    width: 690rpx;
    height: 140rpx;
    background-color: #fff;
    position: absolute;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    margin: 0 auto;
}

.headpic {
    width: 150rpx;
    height: 150rpx;
    border: 4rpx solid #ddd;
    position: absolute;
    bottom: 40rpx;
    left: 20rpx;
}

.myinfo-text {
    padding-left: 200rpx;
    padding-top: 10rpx;
}

.myinfo-text .realname {
    line-height: 56rpx;
    position: relative;
}

.myinfo-text .mysex {
    position: absolute;
    width: 34rpx;
    height: 34rpx;
    top: 10rpx;
    margin-left: 20rpx;
    display: inline-block;
    font-size: 0rpx;
}

.myinfo-text .ulevelstr {
    color: #888888;
    font-size: 24rpx;
}

.mynav-list {
    width: 690rpx;
    margin: 20rpx auto 0rpx auto;
    background-color: #fff;
}

.mynav-list-item {
    width: 650rpx;
    padding: 30rpx 20rpx;
    height: 48rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #f2f2f2;
    display: flex;
    justify-content: flex-start;
    align-items: stretch;
    font-size: 0;
}

.mynav-list-item-icon {
    width: 40rpx;
    margin-right: 20rpx;
    height: 40rpx;
    margin-top: 4rpx;
}

.mynav-list-item-name {
    width: 350rpx;
    line-height: 48rpx;
    font-size: 34rpx;
    color: #888888;
}

.mynav-list-item-right {
    width: 240rpx;
    text-align: right;
    font-size: 34rpx;
    color: #353535;
}

.mynav-list-item-go {
    width: 36rpx;
    height: 36rpx;
    margin-top: 6rpx;
}