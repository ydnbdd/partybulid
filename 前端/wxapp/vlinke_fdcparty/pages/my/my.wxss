page {
    background-color: #f2f2f2;
    padding-bottom: 30rpx;
}

.mytop {
    width: 750rpx;
    height: 350rpx;
    position: relative;
}

.mypic {
    width: 750rpx;
    height: 310rpx;
}

.myinfobtn {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 50rpx;
    right: 60rpx;
}

.myinfoicon {
    width: 50rpx;
    height: 50rpx;
    animation: iconRotate 4s linear infinite;
}

@-webkit-keyframes iconRotate {
    0% {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes iconRotate {
    0% {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.myinfo {
    width: 690rpx;
    height: 140rpx;
    background-color: #fff;
    position: absolute;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    margin: 0 auto;
}

.headpic {
    width: 150rpx;
    height: 150rpx;
    border: 4rpx solid #ddd;
    position: absolute;
    bottom: 40rpx;
    left: 20rpx;
}

.myinfo-text {
    padding-left: 200rpx;
    padding-top: 10rpx;
}

.myinfo-text .realname {
    line-height: 56rpx;
    position: relative;
}

.myinfo-text .mysex {
    position: absolute;
    width: 34rpx;
    height: 34rpx;
    top: 10rpx;
    margin-left: 20rpx;
    display: inline-block;
    font-size: 0rpx;
}

.myinfo-text .ulevelstr {
    color: #888888;
    font-size: 24rpx;
}

.myintegral {
    font-size: 40rpx;
    padding-left: 30rpx;
    position: absolute;
    right: 20rpx;
    top: 24rpx;
    text-align: right;
    border-left: 1rpx solid #ddd;
}

.myintegral text {
    font-size: 24rpx;
    color: #888888;
}

.mynotice {
    width: 650rpx;
    margin: 20rpx auto 0rpx auto;
    background-color: #fff;
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
}

.mynotice-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: block;
}

.mynotice-info {
    width: 520rpx;
    line-height: 60rpx;
}

.mynotice-info .til text {
    font-size: 26rpx;
    float: right;
    color: #888888;
}

.mynotice-info .ntil {
    line-height: 40rpx;
    height: 40rpx;
    overflow: hidden;
    text-align: justify;
    font-size: 26rpx;
    color: #888888;
}

.mynav {
    width: 690rpx;
    margin: 20rpx auto 0rpx auto;
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    border-top: 1rpx solid #f2f2f2;
    border-left: 1rpx solid #f2f2f2;
}

.mynav-item {
    width: 229rpx;
    padding: 30rpx 0rpx;
    border-right: 1rpx solid #f2f2f2;
    border-bottom: 1rpx solid #f2f2f2;
}

.mynav-icon {
    width: 56rpx;
    height: 56rpx;
    display: block;
    margin: 0 auto;
}

.mynav-name {
    text-align: center;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.mynav-list {
    width: 690rpx;
    margin: 20rpx auto 0rpx auto;
    background-color: #fff;
}

.mynav-list-item {
    width: 650rpx;
    padding: 30rpx 20rpx;
    height: 48rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #f2f2f2;
    display: flex;
    justify-content: flex-start;
    align-items: stretch;
    font-size: 0;
}

.mynav-list-item-icon {
    width: 40rpx;
    margin-right: 20rpx;
    height: 40rpx;
    margin-top: 4rpx;
}

.mynav-list-item-name {
    width: 350rpx;
    line-height: 48rpx;
    font-size: 34rpx;
}

.mynav-list-item-right {
    width: 240rpx;
    text-align: right;
    font-size: 34rpx;
    color: #888888;
}

.mynav-list-item-go {
    width: 36rpx;
    height: 36rpx;
    margin-top: 6rpx;
}