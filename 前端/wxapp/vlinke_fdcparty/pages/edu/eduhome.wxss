.userlist_box {
    padding: 0rpx 30rpx;
    height: 160rpx;
    border-bottom: 1px solid #f8f8f8;
}

.userlistbox {
    height: 160rpx;
}

.userlistbox .itembox {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0rpx;
    overflow: hidden;
}

.userlistbox .itembox .headpic {
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: 0;
    padding: 0;
    border-radius: 50%;
    border: 1rpx solid #ddd;
}

.userlistbox .itembox .info {
    width: 560rpx;
    height: 100rpx;
    line-height: 50rpx;
    font-size: 32rpx;
    overflow: hidden;
    text-align: justify;
}

.userlistbox .itembox .info .realname {
    color: #ff0000;
}

.userlistbox .itembox .info .tip {
    color: #888888;
}

.edulessontol {
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ddd;
    height: 120rpx;
    line-height: 120rpx;
}

.edulessontol-hr {
    background-color: #e2e2e2;
    height: 80rpx;
    width: 4rpx;
    margin-top: 20rpx;
}

.edulessontol-item {
    width: 310rpx;
    display: flex;
    justify-content: space-between;
}

.edulessontol-item view {
    font-size: 36rpx;
    color: #e64340;
}

.edulessontol-item text {
    font-size: 28rpx;
    color: #888888;
}