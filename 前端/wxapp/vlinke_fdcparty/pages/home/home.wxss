.banner-home {
    width: 750rpx;
    height: 375rpx;
}

.banner-home .swiper {
    height: 100%;
}

.banner-home .swiper .img {
    width: 100%;
    height: 100%;
}

.notice_container {
    padding-left: 20rpx;
    padding-right: 20rpx;
    border-bottom: 1rpx solid #ddd;
}

.notice_container .noticeicon {
    width: 32rpx;
    height: 32rpx;
    line-height: 180rpx;
    display: block;
    margin: 0;
    padding: 0;
}

.notice_container .noticebox {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
}

.wxapphomenav {
    display: inline-flex;
    flex-wrap: wrap;
    padding-top: 20rpx;
    padding-bottom: 10rpx;
}

.wxapphomenav .item {
    text-align: center;
}

.wxapphomenav .pic {
    width: 50%;
    height: 50%;
}

.wxapphomenav .til {
    display: block;
    font-size: 28rpx;
    color: #000000;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.navbar-tab {
    width: 100%;
    border-bottom: 2rpx solid #ddd;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    font-weight: bold;
}

.navbar-tab-item {
    display: inline-block;
    color: #000000;
}

.navbar-tab-item.active {
    color: #e64340;
    border-bottom: 4rpx solid #e64340;
}

.navbar-tab-btn {
    width: 690rpx;
    padding: 30rpx 30rpx;
}