page {
    width: 100%;
    height: 100%;
}

.loginpage {
    position: relative;
    width: 100%;
    height: 100%;
}

.loginpic {
    position: absolute;
    width: 750rpx;
    height: 100%;
    top: 0rpx;
    left: 0rpx;
}

.loginbox {
    position: absolute;
    bottom: 50rpx;
    padding: 40rpx 30rpx;
    left: 0rpx;
    right: 0rpx;
    margin: 0 auto;
    width: 600rpx;
    background-color: transparent;
    background: rgba(0,0,0,0.5);
}

.login-item {
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 20rpx;
}

.logintil {
    line-height: 76rpx;
    width: 160rpx;
    font-weight: bold;
    color: #fff;
}

.logininput {
    width: 440rpx;
    padding: 10rpx 0rpx;
    color: #fff;
}

.codeinput {
    width: 200rpx;
}

.codebtn {
    width: 240rpx;
    line-height: 76rpx;
    text-align: right;
    color: #fff;
    font-size: 28rpx;
}