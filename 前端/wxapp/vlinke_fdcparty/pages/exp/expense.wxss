.tab-hd .tab-hd-item {
    width: 250rpx;
}

.expense-box {
    background-color: #fff;
    padding: 0rpx 20rpx;
    margin-bottom: 30rpx;
}

.expense-item {
    width: 650rpx;
    padding: 20rpx 20rpx;
    height: 48rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #f2f2f2;
    display: flex;
    justify-content: flex-start;
    align-items: stretch;
    font-size: 0;
}

.expense-item .til {
    width: 300rpx;
    line-height: 48rpx;
    font-size: 34rpx;
    color: #888888;
}

.expense-item .con {
    width: 350rpx;
    text-align: right;
    font-size: 34rpx;
    color: #353535;
}

.expense-item .expcatetil {
    width: 650rpx;
    text-align: justify;
    font-weight: bold;
    color: #353535;
}

.expense-details {
    width: 650rpx;
    padding: 30rpx 20rpx;
    text-align: justify;
}

.expense-remark {
    width: 650rpx;
    padding: 30rpx 20rpx;
    text-align: justify;
}

.expformbox {
    padding: 30rpx 30rpx;
    background-color: #fff;
}

.exp-item {
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 20rpx;
}

.exp-til {
    line-height: 76rpx;
    width: 270rpx;
    font-weight: bold;
}

.exp-input {
    width: 420rpx;
    padding: 10rpx 0rpx;
    z-index: 0;
}

.exp-textarea {
    width: 650rpx;
    padding: 20rpx;
    height: 200rpx;
    border: 1rpx solid #ddd;
    z-index: 0;
}